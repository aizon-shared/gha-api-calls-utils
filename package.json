{
  "name": "gha-release-management",
  "version": "1.0.0",
  "description": "Defines the actions involved in the release process",
  "scripts": {
    "prebuild": "rm -rf lib && rm -rf dist && mkdir dist",
    "build:get-lastest-tags": "ncc build lib/actions/getLatestTags.js -o dist/get-latest-tags",
    "build": "tsc && npm run build:get-lastest-tags",
    "lint": "eslint **/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aizon-shared/gha-release-management.git"
  },
  "keywords": [
    "release",
    "action"
  ],
  "author": "Aizon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aizon-shared/gha-release-management/issues"
  },
  "homepage": "https://github.com/aizon-shared/gha-release-management#readme",
  "devDependencies": {
    "@types/node": "18.17.0",
    "@typescript-eslint/parser": "5.62.0",
    "@vercel/ncc": "0.36.1",
    "eslint": "8.45.0",
    "eslint-plugin-github": "4.9.2",
    "js-yaml": "4.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/github": "5.1.1",
    "node-fetch": "3.3.2",
    "octokit": "3.0.0"
  }
}
